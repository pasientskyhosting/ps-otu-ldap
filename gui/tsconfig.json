{
    "compilerOptions": {
        "module": "commonjs",
        "jsx": "react",
        "lib": [
            "es2015", "dom"
        ],
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noEmit": true,
        "pretty": true,
        "target": "es2015",
        "strict": true
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
